{
    "name": "binalogue/php-cs-fixer-config",
    "description": "PHP CS Fixer config.",
    "keywords": [
        "php",
        "php-cs-fixer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Mikel Goig",
            "email": "mikel@binalogue.com",
            "homepage": "https://mikelgoig.com"
        }
    ],
    "require": {
        "friendsofphp/php-cs-fixer": "^2.16.4"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ]
    },
    "scripts": {
        "styles": "vendor/bin/php-cs-fixer fix"
    }
}
